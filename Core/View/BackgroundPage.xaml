<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="RadarFamilyCore.View.BackgroundPage" 
	Title="Persistence">

	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="5, 20, 5, 5" Android="5, 20, 5, 5" />
	</ContentPage.Padding>

	<StackLayout>
		<StackLayout Orientation="Horizontal">
			<Label Text="Sleep Date: " FontSize="Large" />
			<Label x:Name="SleepDateLabel" />
		</StackLayout>
		<StackLayout Orientation="Horizontal">
			<Label Text="First Name: " FontSize="Large" />
			<Entry x:Name="FirstNameEntry" HorizontalOptions="FillAndExpand" />
		</StackLayout>

		<Label FontSize="Medium" 
			VerticalOptions="StartAndExpand" 
			HorizontalOptions="StartAndExpand" 
			Text="Enter a name, and then either background or terminate the app. The first name and the sleep time will persist between background/foreground." />

	</StackLayout>
</ContentPage>